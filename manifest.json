{
  "manifest_version": 3,
  "name": "LinkedIn Profile Profiler",
  "version": "1.0.0",
  "description": "Extract LinkedIn profile details and find email addresses using Hunter.io API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://api.hunter.io/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Profile Profiler"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/in/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
