{
  "manifest_version": 3,
  "name": "Profile Hunter",
  "version": "1.0.0",
  "description": "Fetch LinkedIn profile details from Hunter.io API - Full Name, Email, Company, Position",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://api.hunter.io/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Profile Hunter"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/in/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
